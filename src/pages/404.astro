---
/**
 * 404 Error Page
 *
 * Custom error page shown when a user navigates to a non-existent page.
 */

import InnerLayout from '../layouts/InnerLayout.astro';
import Navigation from '../components/library/Navigation.astro';

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Components', href: '/components-demo' },
];
---

<InnerLayout
  title="Page Not Found"
  description="The page you are looking for could not be found."
  containerized={false}
>
  <Navigation
    slot="navigation"
    logoText="Your Brand"
    navLinks={navLinks}
    transparent={false}
  />

  <section class="min-h-[70vh] flex items-center justify-center px-4 py-24 md:py-32">
    <div class="w-full max-w-6xl mx-auto text-center">
      <!-- 404 Number -->
      <div class="mb-8">
        <h1 class="text-9xl font-black text-primary-600 leading-none mb-4">
          404
        </h1>
        <div class="w-24 h-1 bg-primary-600 mx-auto"></div>
      </div>

      <!-- Error Message -->
      <h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-6">
        Page Not Found
      </h2>
      <p class="text-xl text-neutral-600 mb-12">
        Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors duration-200"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          Go Home
        </a>
        <a
          href="javascript:history.back()"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-primary-600 bg-white border-2 border-primary-600 rounded-lg hover:bg-primary-50 transition-colors duration-200"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            ></path>
          </svg>
          Go Back
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="mt-16 pt-8 border-t border-neutral-200">
        <p class="text-sm text-neutral-500 mb-4">
          Here are some helpful links instead:
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/"
            class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            Home
          </a>
          <span class="text-neutral-300">|</span>
          <a
            href="/about"
            class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            About
          </a>
          <span class="text-neutral-300">|</span>
          <a
            href="/components-demo"
            class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            Components
          </a>
          <span class="text-neutral-300">|</span>
          <a
            href="/contact"
            class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            Contact
          </a>
        </div>
      </div>
    </div>
  </section>

</InnerLayout>
