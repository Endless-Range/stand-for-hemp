---
/**
 * Bold Hero Section
 *
 * An impactful hero section with large typography and emphasis.
 * Includes highlighted text support and gradient options.
 *
 * Props:
 * @param {string} headline - Large, bold headline (can include HTML for highlighting)
 * @param {string} subtext - Supporting text below headline
 * @param {Object} cta - Primary call-to-action button {label: string, href: string}
 * @param {Object} secondaryCta - Optional secondary CTA {label: string, href: string}
 * @param {boolean} gradientBackground - Use gradient background (default: false)
 */

export interface Props {
  headline: string;
  subtext?: string;
  cta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  gradientBackground?: boolean;
}

const {
  headline,
  subtext,
  cta,
  secondaryCta,
  gradientBackground = false,
} = Astro.props;
---

<section
  class={`relative py-24 md:py-36 ${
    gradientBackground
      ? "bg-gradient-to-br from-primary-50 via-white to-secondary-50"
      : "bg-white"
  }`}
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto text-center">
      <h1
        class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-neutral-900 mb-6 leading-tight"
        set:html={headline}
      />

      {subtext && (
        <p class="text-xl md:text-2xl text-neutral-600 mb-10">
          {subtext}
        </p>
      )}

      {(cta || secondaryCta) && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          {cta && (
            <a
              href={cta.href}
              class="w-full sm:w-auto bg-primary-600 hover:bg-primary-700 text-white px-10 py-4 rounded-lg font-semibold text-lg transition-all hover:scale-105 shadow-lg hover:shadow-xl text-center"
            >
              {cta.label}
            </a>
          )}
          {secondaryCta && (
            <a
              href={secondaryCta.href}
              class="w-full sm:w-auto border-2 border-neutral-900 hover:bg-neutral-900 hover:text-white text-neutral-900 px-10 py-4 rounded-lg font-semibold text-lg transition-all text-center"
            >
              {secondaryCta.label}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>

<style is:global>
  /* Allow for highlighted text in headline */
  .highlight {
    color: var(--color-primary-600);
  }

  .gradient-text {
    background: linear-gradient(to right, var(--color-primary-600), var(--color-secondary-600));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
