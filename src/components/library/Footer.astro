---
/**
 * Footer Component
 *
 * A multi-column footer with navigation links, social media, and copyright.
 * Fully customizable and responsive.
 *
 * Props:
 * @param {string} companyName - Company name for copyright
 * @param {string} tagline - Optional company tagline/description
 * @param {Array} columns - Footer navigation columns [{title: string, links: [{label: string, href: string}]}]
 * @param {Array} socialLinks - Social media links [{platform: string, href: string, icon: string}]
 * @param {string} backgroundColor - Background color class (default: 'bg-neutral-900')
 */

export interface Props {
  companyName: string;
  tagline?: string;
  columns?: Array<{
    title: string;
    links: Array<{ label: string; href: string }>;
  }>;
  socialLinks?: Array<{
    platform: string;
    href: string;
    icon: string;
  }>;
  backgroundColor?: string;
  endlessRangeUrl?: string;
}

const {
  companyName,
  tagline,
  columns,
  socialLinks,
  backgroundColor = 'bg-neutral-900',
  endlessRangeUrl,
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class={`${backgroundColor} text-[#4a6741] pt-12 pb-8`}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-8 mb-8">
      <!-- Company Info -->
      <div class="lg:col-span-4">
        <img src="/logo.png" alt="Stand for Hemp" class="h-16 mb-4" />
        <h3 class="text-2xl font-bold mb-3 text-[#4a6741]">{companyName}</h3>
        {tagline && <p class="text-[#4a6741]/80 mb-6">{tagline}</p>}

        <!-- Social Links -->
        {socialLinks && socialLinks.length > 0 && (
          <div class="flex space-x-4">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[#4a6741]/70 hover:text-[#4a6741] transition-colors"
                aria-label={social.platform}
              >
                <span set:html={social.icon} />
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Footer Columns -->
      {columns && columns.map((column) => (
        <div class="lg:col-span-2">
          <p class="text-sm font-semibold uppercase tracking-wider mb-4">
            {column.title}
          </p>
          <ul class="space-y-2">
            {column.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-[#4a6741]/70 hover:text-[#4a6741] transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-[#4a6741]/20">
      <div class="flex flex-col items-center text-center space-y-2">
        <p class="text-[#4a6741]/70 text-sm">
          &copy; {currentYear} {companyName}. All rights reserved.
        </p>
        {endlessRangeUrl && (
          <p class="text-[#4a6741]/70 text-sm">
            An <a href={endlessRangeUrl} target="_blank" rel="noopener noreferrer" class="text-[#ca8a04] hover:text-[#4a6741] font-semibold transition-colors">Endless Range</a> project
          </p>
        )}
      </div>
    </div>
  </div>
</footer>
