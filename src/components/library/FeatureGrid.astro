---
/**
 * Feature Grid Component
 *
 * A responsive grid layout for displaying multiple feature cards.
 * Auto-adjusts columns based on screen size.
 *
 * Props:
 * @param {string} title - Section title (optional)
 * @param {string} subtitle - Section subtitle (optional)
 * @param {number} columns - Number of columns on desktop: 2, 3, or 4 (default: 3)
 * @param {boolean} centered - Center the title/subtitle (default: true)
 */

export interface Props {
  title?: string;
  subtitle?: string;
  columns?: 2 | 3 | 4;
  centered?: boolean;
}

const {
  title,
  subtitle,
  columns = 3,
  centered = true,
} = Astro.props;

const gridClasses = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
};
---

<section class="py-16 md:py-24 bg-neutral-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    {(title || subtitle) && (
      <div class={`mb-12 md:mb-16 ${centered ? 'text-center max-w-5xl mx-auto' : ''}`}>
        {title && (
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg md:text-xl text-neutral-600">
            {subtitle}
          </p>
        )}
      </div>
    )}

    <div class={`grid grid-cols-1 ${gridClasses[columns]} gap-6 md:gap-8`}>
      <slot />
    </div>
  </div>
</section>
