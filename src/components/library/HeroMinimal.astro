---
/**
 * Minimal Hero Section
 *
 * A clean, centered hero section with minimal design.
 * Perfect for simple landing pages or inner pages.
 *
 * Props:
 * @param {string} title - Main headline text
 * @param {string} subtitle - Optional subtext below the title
 * @param {Object} cta - Call-to-action button {label: string, href: string}
 * @param {Object} secondaryCta - Optional secondary CTA {label: string, href: string}
 */

export interface Props {
  title: string;
  subtitle?: string;
  cta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
}

const {
  title,
  subtitle,
  cta,
  secondaryCta,
} = Astro.props;
---

<section class="relative bg-white py-20 md:py-32">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">
        {title}
      </h1>

      {subtitle && (
        <p class="text-lg md:text-xl text-neutral-600 mb-8">
          {subtitle}
        </p>
      )}

      {(cta || secondaryCta) && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          {cta && (
            <a
              href={cta.href}
              class="w-full sm:w-auto bg-primary-600 hover:bg-primary-700 text-white px-8 py-3.5 rounded-lg font-medium transition-colors text-center"
            >
              {cta.label}
            </a>
          )}
          {secondaryCta && (
            <a
              href={secondaryCta.href}
              class="w-full sm:w-auto bg-neutral-100 hover:bg-neutral-200 text-neutral-900 px-8 py-3.5 rounded-lg font-medium transition-colors text-center"
            >
              {secondaryCta.label}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
