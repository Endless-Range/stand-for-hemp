---
/**
 * Blog Post Layout
 *
 * Layout for individual blog posts with author info, featured image,
 * and reading time.
 *
 * Props:
 * @param {string} title - Post title
 * @param {string} description - Post excerpt/description
 * @param {string} ogImage - Social sharing image (defaults to featuredImage)
 * @param {string} featuredImage - Hero image for the post
 * @param {string} author - Author name
 * @param {string} authorImage - Author avatar URL (optional)
 * @param {string} date - Publication date (formatted string)
 * @param {string} category - Post category
 * @param {number} readingTime - Estimated reading time in minutes (optional)
 */

import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/library/Navigation.astro';
import Footer from '../components/library/Footer.astro';
import { Image } from 'astro:assets';
import { footerConfig } from '../config/footer';

export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  featuredImage: string;
  author: string;
  authorImage?: string;
  date: string;
  category: string;
  readingTime?: number;
}

const {
  title,
  description,
  ogImage,
  featuredImage,
  author,
  authorImage,
  date,
  category,
  readingTime,
} = Astro.props;

const shareImage = ogImage || featuredImage;

// Convert date string to ISO format for article:published_time
// Assuming date is in format like "Nov 5, 2025"
const dateObj = new Date(date);
const isoDate = dateObj.toISOString();
---

<BaseLayout
  title={title}
  description={description}
  ogImage={shareImage}
  ogType="article"
  articlePublishedTime={isoDate}
  articleAuthor={author}
>
  <Navigation slot="navigation" transparent={false} />

  <article class="pt-24 md:pt-32">
    <!-- Post Header -->
    <div class="bg-white py-12 md:py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <!-- Category -->
          <div class="mb-6">
            <span class="inline-block bg-primary-100 text-primary-700 px-4 py-1.5 rounded-full text-sm font-semibold">
              {category}
            </span>
          </div>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">
            {title}
          </h1>

          <!-- Description/Teaser -->
          <p class="text-xl md:text-2xl text-neutral-600 mb-8 leading-relaxed">
            {description}
          </p>

          <!-- Meta Info -->
          <div class="flex items-center gap-6 text-neutral-600 flex-wrap">
            <!-- Author -->
            <div class="flex items-center gap-3">
              {authorImage ? (
                <img
                  src={authorImage}
                  alt={author}
                  class="w-12 h-12 rounded-full object-cover"
                />
              ) : (
                <div class="w-12 h-12 rounded-full bg-primary-600 flex items-center justify-center text-white font-semibold">
                  {author.charAt(0).toUpperCase()}
                </div>
              )}
              <span class="font-medium text-neutral-900">{author}</span>
            </div>

            <!-- Date -->
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <time>{date}</time>
            </div>

            <!-- Reading Time -->
            {readingTime && (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>{readingTime} min read</span>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Featured Image -->
    <div class="w-full relative overflow-hidden bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <Image
            src={featuredImage}
            alt={title}
            width={1200}
            height={600}
            format="webp"
            quality={85}
            class="w-full h-auto max-h-[600px] object-cover rounded-lg"
            loading="eager"
          />
        </div>
      </div>
    </div>

    <!-- Post Content -->
    <div class="bg-white py-12 md:py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto prose prose-lg prose-neutral max-w-none
          prose-headings:font-bold prose-headings:text-neutral-900
          prose-h2:text-3xl prose-h2:mt-20 prose-h2:mb-8
          prose-h3:text-2xl prose-h3:mt-16 prose-h3:mb-6
          prose-p:text-neutral-700 prose-p:leading-relaxed prose-p:mb-6
          prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline
          prose-strong:text-neutral-900 prose-strong:font-semibold
          prose-ul:my-8 prose-ul:space-y-3
          prose-ol:my-8 prose-ol:space-y-3
          prose-li:text-neutral-700 prose-li:leading-relaxed
          prose-img:rounded-lg prose-img:shadow-lg prose-img:my-10
          prose-blockquote:border-l-4 prose-blockquote:border-primary-600 prose-blockquote:pl-6 prose-blockquote:italic prose-blockquote:my-10 prose-blockquote:text-neutral-600
          prose-pre:bg-neutral-800 prose-pre:text-neutral-50 prose-pre:p-6 prose-pre:rounded-xl prose-pre:my-12 prose-pre:overflow-x-auto prose-pre:shadow-lg prose-pre:border prose-pre:border-neutral-700
          prose-code:text-primary-700 prose-code:bg-primary-50 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:font-mono prose-code:border prose-code:border-primary-200
          prose-table:my-14 prose-table:border-collapse prose-table:w-full prose-table:shadow-md prose-table:rounded-lg prose-table:overflow-hidden
          prose-thead:bg-neutral-100 prose-thead:border-b-2 prose-thead:border-neutral-300
          prose-th:px-6 prose-th:py-4 prose-th:text-left prose-th:font-semibold prose-th:text-neutral-900
          prose-td:px-6 prose-td:py-4 prose-td:border-b prose-td:border-neutral-200
          prose-tr:transition-colors hover:prose-tr:bg-neutral-50">
          <slot />
        </div>
      </div>
    </div>

    <!-- Back to Blog -->
    <div class="bg-neutral-50 py-12 border-t border-neutral-200">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <a
            href="/blog"
            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Blog
          </a>
        </div>
      </div>
    </div>
  </article>

  <Footer
    slot="footer"
    companyName={footerConfig.companyName}
    tagline={footerConfig.tagline}
    columns={footerConfig.columns}
    socialLinks={footerConfig.socialLinks}
    backgroundColor={footerConfig.backgroundColor}
  />
</BaseLayout>

<style is:global>
  /* Enhanced prose styles for better readability */
  .prose {
    color: rgb(64 64 64);
  }

  /* Heading spacing - override defaults */
  .prose h2 {
    margin-top: 2.5rem !important;
    margin-bottom: 2rem !important;
    font-size: 1.875rem !important;
    font-weight: 700 !important;
  }

  .prose h3 {
    margin-top: 2rem !important;
    margin-bottom: 1.5rem !important;
    font-size: 1.5rem !important;
    font-weight: 700 !important;
  }

  .prose h4 {
    margin-top: 1.5rem !important;
    margin-bottom: 1rem !important;
    font-weight: 700 !important;
  }

  /* First heading has less top margin */
  .prose > h2:first-child,
  .prose > h3:first-child {
    margin-top: 0 !important;
  }

  /* Paragraph spacing */
  .prose p {
    margin-bottom: 0.5rem !important;
    line-height: 1.75 !important;
  }

  /* List spacing */
  .prose ul,
  .prose ol {
    margin-top: 2rem !important;
    margin-bottom: 2rem !important;
  }

  .prose li {
    margin-bottom: 0.75rem !important;
  }

  /* Enhanced code block styling for better legibility */
  .prose pre {
    background: linear-gradient(to bottom, rgb(38 38 38), rgb(23 23 23)) !important;
    line-height: 1.7 !important;
    margin-top: 3rem !important;
    margin-bottom: 3rem !important;
    padding: 1.5rem !important;
    border-radius: 0.75rem !important;
    border: 1px solid rgb(64 64 64) !important;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1) !important;
  }

  .prose pre code {
    background: transparent !important;
    color: rgb(229 231 235) !important;
    border: none !important;
    padding: 0 !important;
    font-size: 0.95em;
    line-height: 1.7;
    display: block;
  }

  /* Inline code styling - distinct from code blocks */
  .prose :not(pre) > code {
    font-weight: 500;
    font-size: 0.9em;
    background: rgb(239 246 255) !important;
    color: rgb(29 78 216) !important;
    padding: 0.125rem 0.5rem !important;
    border-radius: 0.25rem !important;
    border: 1px solid rgb(191 219 254) !important;
  }

  /* Table styling enhancements */
  .prose table {
    border: 1px solid rgb(229 229 229) !important;
    margin-top: 3.5rem !important;
    margin-bottom: 3.5rem !important;
  }

  .prose tbody tr:last-child td {
    border-bottom: none;
  }

  .prose th,
  .prose td {
    padding: 1rem 1.5rem !important;
  }

  /* Blockquote spacing */
  .prose blockquote {
    margin-top: 2.5rem !important;
    margin-bottom: 2.5rem !important;
  }
</style>
