---
/**
 * Inner Page Layout
 *
 * Layout for standard content pages (About, Services, etc.)
 * Includes navigation, content container, and footer.
 *
 * Props:
 * All BaseLayout props plus:
 * @param {string} pageTitle - Large page heading (optional, displayed on page)
 * @param {string} pageSubtitle - Page subtitle (optional)
 * @param {boolean} containerized - Wrap content in container (default: true)
 */

import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/library/Navigation.astro';
import Footer from '../components/library/Footer.astro';
import { footerConfig } from '../config/footer';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
  pageTitle?: string;
  pageSubtitle?: string;
  containerized?: boolean;
}

const {
  title,
  description,
  ogImage,
  canonicalUrl,
  pageTitle,
  pageSubtitle,
  containerized = true,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalUrl={canonicalUrl}
>
  <Navigation slot="navigation" transparent={false} />

  <!-- Page Header -->
  {(pageTitle || pageSubtitle) && (
    <section class="bg-neutral-50 pt-24 md:pt-32 pb-12 md:pb-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto text-center">
          {pageTitle && (
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-4">
              {pageTitle}
            </h1>
          )}
          {pageSubtitle && (
            <p class="text-xl text-neutral-600">
              {pageSubtitle}
            </p>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <div class={!pageTitle && !pageSubtitle ? 'pt-24 md:pt-32' : ''}>
    {containerized ? (
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
        <slot />
      </div>
    ) : (
      <slot />
    )}
  </div>

  <Footer
    slot="footer"
    companyName={footerConfig.companyName}
    tagline={footerConfig.tagline}
    columns={footerConfig.columns}
    socialLinks={footerConfig.socialLinks}
    backgroundColor={footerConfig.backgroundColor}
  />
</BaseLayout>
