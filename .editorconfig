# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# Apply to all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package files
[{package.json,*.yml,*.yaml}]
indent_size = 2

# Astro components
[*.astro]
indent_size = 2

# TypeScript/JavaScript
[*.{js,ts,mjs,cjs}]
indent_size = 2
